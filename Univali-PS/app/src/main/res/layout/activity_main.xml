<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/branco"
    android:layout_margin="25dp"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:ignore="ContentDescription">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <ImageView
            android:id="@+id/IV_LogoUnivali"
            android:layout_width="175dp"
            android:layout_height="125dp"

            android:layout_gravity="center"

            app:srcCompat="@drawable/univali_logo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_loginEntrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            style="?android:attr/borderlessButtonStyle"

            android:background="@drawable/botao_arredondado_azul"
            android:onClick="botaoEntrarSelecionado"
            android:text="Entrar"
            android:textColor="@color/branco" />

        <Button
            android:id="@+id/btn_loginRegistrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            style="?android:attr/borderlessButtonStyle"

            android:background="@drawable/botao_arredondado_claro"
            android:onClick="botaoRegistrarSelecionado"

            android:text="REGISTRAR"
            android:textColor="@color/fontePrimary" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="E-mail"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#03037A"

            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_arrendondado"
            android:ems="10"
            android:hint="Ex: name@company.com"
            android:selectAllOnFocus="false"
            android:padding="10dp"
            android:singleLine="false"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/tv_senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Senha"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#03037A"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/et_senha"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_arrendondado"
            android:ems="10"
            android:padding="10dp"
            android:hint="Senha"
            android:inputType="textPassword"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_loginConfirmar"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_weight=".50"
            android:background="@drawable/botao_arredondado_azul"
            android:onClick="botaoConfirmar"
            android:text="CONFIRMAR"
            android:textColor="@color/branco" />

        <CheckBox
            android:id="@+id/cb_loginLembrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_weight=".50"
            android:buttonTint="@color/fontePrimary"
            android:text="LEMBRAR SENHA"
            android:textColor="@color/fontePrimary"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <ImageView
            android:id="@+id/IV_RegistrarCom"
            android:layout_width="175dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/registrar_com" />

    </LinearLayout>
</LinearLayout>